<% if resource.errors.any? %>
  <div class="alert fade in alert-danger" id="error_explanation">
    <button type="button" class="close" data-dismiss="alert">×</button>
    <h3>
      В заполненной форме <%= I18n.t :err, count: resource.errors.count %>:
    </h3>
    <ul>
      <% resource.errors.each do |message| %>
        <li>
          <%= message.full_message %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>
